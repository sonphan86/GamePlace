<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sonphan.gameplaces.GamePalace"
    android:id="@+id/aa"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_gravity="bottom" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="01"
                android:id="@+id/lblQuestion" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnImageFace"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/m72"
            android:id="@+id/frQuestion"></FrameLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="00:00"
                android:id="@+id/lblTime" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnImageGooglePlus" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/btnImageAns1"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/m1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/btnImageAns2"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/m6" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/btnImageAns3"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/m7" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/btnImageAns4"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/m8" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btnImagePrevious"
            android:layout_alignParentStart="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/btnImageNext"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
